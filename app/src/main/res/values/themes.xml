<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Novery" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.Novery.Splash" parent="Theme.SplashScreen">
        <!-- App logo shown during system splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Background color behind the logo while splash is visible -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Also set windowBackground to avoid flicker on some devices -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Make the entry animation slightly more visible -->
        <item name="windowSplashScreenAnimationDuration">700</item>
        <!-- Theme to switch to after splash exit -->
        <item name="postSplashScreenTheme">@style/Theme.Novery</item>
    </style>
</resources>